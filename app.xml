<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/backgroundimg"
    android:paddingTop="25dp"
    >


    <TextView
        android:id="@+id/section1"
        android:layout_width="447dp"
        android:layout_height="80dp"
        android:background="#013D65"

        android:text="Your Smart Belt  "
        android:textAlignment="center"
        android:textColor="#fff"
        android:textColorHighlight="@color/cardview_light_background"
        android:textSize="35sp"
        android:textStyle="bold"
/>


    <View
        android:id="@+id/view"
        android:layout_width="161dp"
        android:layout_height="164dp"
        android:background="@drawable/manpj" />

    <TextView
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_width="216dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="50dp"
        android:text="MANU P JOSE"/>

    <TextView
        android:id="@+id/section2"
        android:layout_width="435dp"
        android:layout_height="55dp"

        android:text="ANGLE OF BEND  "
        android:textAlignment="center"
        android:textColor="#fff"
        android:textColorHighlight="@color/cardview_light_background"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/section3"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#6D1E88E5"
        android:paddingStart="12dp"
        android:paddingTop="1dp"
        android:text="170.00 "
        android:textAlignment="center"
        android:textColor="#fff"
        android:textColorHighlight="@color/cardview_light_background"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="." />

    <Button
        android:id="@+id/severity"
        android:layout_width="191dp"
        android:layout_height="36dp"
        android:background="@color/teal_200"
        android:text="check condition" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" " />

    <TextView
        android:id="@+id/severitycal"
        android:layout_width="423dp"
        android:layout_height="54dp"
        android:paddingTop="2dp"
        android:text="Condition Stable"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30dp"

        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="." />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:shadowColor="@color/purple_200"
        android:text="Trigger Vibration/impulse"
        android:textStyle="bold" />

    <Button
        android:id="@+id/next"
        android:layout_width="240dp"
        android:layout_height="54dp"
        android:text="Show conditon details" />


</LinearLayout>